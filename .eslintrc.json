{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": ["plugin:unicorn/recommended", "prettier"],
  "overrides": [
    {
      "files": ["**/__tests__/*.spec.js"],
      "plugins": ["no-only-tests"],
      "extends": ["plugin:jest/recommended", "plugin:testing-library/vue"]
    }
  ],
  "settings": {
    "jest": {
      "version": 28
    }
  }
}
